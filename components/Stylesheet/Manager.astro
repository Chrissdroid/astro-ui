---
import {SanitizerProps,OpenProps,StylesheetProps} from './types'
import SanitizerLink from './Sanitizer.astro'
import OpenPropsLink from './OpenProps.astro'
import StylesheetLink from './Stylesheet.astro'

interface Props extends StylesheetProps{
    sanitizer?:SanitizerProps
    OProps?:OpenProps
    critical?:boolean
}

const {href,media,alternative,cors,preload,title,list,sanitizer,OProps, critical} = Astro.props as Props

---
    <!-- Managed Stylesheets -->
    
    {
        critical && href &&
        <StylesheetLink  href={href} media={media} alternative={alternative} cors={cors} preload={preload} title={title}/>
    }
    {
        critical && list &&
        <StylesheetLink  list={list}/>
    }
    {
        sanitizer &&
         <SanitizerLink sanitize={sanitizer} />
    }
    {
        OProps &&
         <OpenPropsLink props={OProps} />
    }
    {
        href &&
        <StylesheetLink  href={href} media={media} alternative={alternative} cors={cors} preload={preload} title={title}/>
    }
    {
         list &&
        <StylesheetLink list={list}/>
    }
    
    <!-- End of Stylesheets -->