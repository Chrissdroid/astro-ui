---
Astro.self = $$Component
---
<ul class="sidebar__parent">
  {
    Astro.props.items.map(
      item => (
        <li>
          {
            item.href
              ? <a href={item.href}>{item.name}</a>
            : <h2>{item.name}</h2>
          }
          {
            item.items && (
              <Astro.self items={item.items} />
            )
          }
        </li>
      )
    )
  }
</ul>
