    import TableOfContents from '../components/TableOfContents.astro'
    import StorkOutput from '../components/Stork/StorkOutput.astro'
    import XElement from 'astro-xelement'

    const {article:Article} = XElement

    const {content:{menu, directory,
        data:{ page_title,
            page_description,
            astro
        }}}=Astro.props
