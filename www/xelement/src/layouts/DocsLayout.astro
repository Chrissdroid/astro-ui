---
import BaseLayout from '../layouts/BaseLayout.astro'
import LeftSideBar from './components/LeftSideBar.astro'
import StorkOutput from '../components/Stork/StorkOutput.astro'
import Article from '../components/Article.astro'
import RightSideBar from './components/RightSideBar.astro'
import Giscss from '../components/Giscuss.astro'
const {
    content:{menu, directory,
        data:{ 
            page_title,
            page_description,
            astro:{
                headers,html
            }
        }
    }
}=Astro.props

---
<BaseLayout 
    PageMeta={{page_title,page_description}}
    PageStyles={[
        {
            href:Astro.resolve('../styles/docsLayout.scss'),
            media:'screen'
        }
    ]}
>
    <main class="layout">
        <LeftSideBar menu={menu} dir={directory}/>
        <div class="break__row"></div>
        <Article >
            {html}
        </Article>
        <div class="break__row"></div>
        <div class="break-row"></div>
            <RightSideBar headers={headers}/>
        <div class="break-row"></div>
    </main>
        <Giscss/>    
    <footer class="footer__wrapper">
    </footer>
</BaseLayout>

